{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "globals": {
    "document": true,
    "confirm": true,
    "API_HOST": true,
    "localStorage": true,
    "window": true,
    "alert": true,
    "location": true,
    "FormData": true,
    "fetch": true,
    "__DEV__": true,
    "Response": true,
    "ReadableStream": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "no-bitwise": [0, {
      "allow": ["~"],
      "int32Hint": true
    }],
    "react/jsx-closing-bracket-location": [2, {
      "nonEmpty": "after-props",
      "selfClosing": "after-props"
    }],
    "react/jsx-filename-extension": [0],
    "comma-dangle": [2, "always-multiline"],
    "import/extensions": [0],
    "import/no-mutable-exports": [0],
    "class-methods-use-this": [0],
    "react/prefer-stateless-function": [0],
    "jsx-a11y/label-has-for": [0],
    "prefer-spread": [0],
    "no-alert": [0],
    "import/no-extraneous-dependencies": [0],
    "implicit-arrow-linebreak": [0]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.4.2"
    }
  }
}
